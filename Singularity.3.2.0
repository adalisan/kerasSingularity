Bootstrap: docker
From: centos:centos6.9

%environment
        export LC_ALL=en_US.UTF-8
        export LANG=en_US.UTF-8
        
%post
        ## This loads the community epel releases
        yum -y install epel-release
        curl 'https://setup.ius.io/' -o setup-ius.sh
        sh setup-ius.sh

        ## installs pyton 3.6
        yum -y --enablerepo=ius install python36u

        ## installs pip
        yum -y --enablerepo=ius install python-pip

        ## install R-devel
        yum -y --enablerepo=ius install R-devel

        ## install R-devel
        yum -y --enablerepo=ius install R-devel

        ## install devtools
        R -e 'install.packages("devtools", dependencies=TRUE, repos="http://cran.rstudio.com/")'
        R -e 'install.packages("tidyverse", dependencies = TRUE, repos="http://cran.rstudio.com/")'

        ## installing keras
        R -e 'devtools::install_github("rstudio/keras")'






