Bootstrap: docker
From: centos:centos6.9

%environment
        export LC_ALL=en_US.UTF-8
        export LANG=en_US.UTF-8
        
%post
        ## This is some weird glitch where there's a bug in centos 6
        ## where it's not loading /etc/sysconfig/i18n file correctly
        ## my kludgy fix is to set the lang environment for everyone
        echo "export LANG=en_US.UTF-8" >> /etc/bashrc


        ## This loads the community epel releases
        yum -y install epel-release
        curl 'https://setup.ius.io/' -o setup-ius.sh
        sh setup-ius.sh

        ## installs pyton 3.6
        yum -y --enablerepo=ius install python36u

        ## install R-devel
        yum -y --enablerepo=ius install R-devel

