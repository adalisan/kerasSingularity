bootstrap: docker
from: rocker/r-ver

@environment
export DEBIAN_FRONTEND=noninteractive
export PATH=/opt/conda/bin:$PATH
export TENSORFLOW_PYTHON=/opt/conda/bin/python

@post
  # Install Anaconda
  apt-get -qq update && apt-get install -y wget
  wget https://repo.continuum.io/miniconda/Miniconda2-latest-Linux-x86_64.sh && \
      /bin/bash Miniconda2-latest-Linux-x86_64.sh -b -p /opt/conda

  apt-get install -t unstable -y libcurl4-openssl-dev libssl-dev

  pip install tensorflow keras utils np_utils

  # Install devtools and Keras (R)
  wget https://raw.githubusercontent.com/vsoch/keras-r/master/install.R
  R --no-save < install.R
 
